@Html.ActionLink(Model.Section, "ShowCategories","Category", new { section = Model.Section}, null)
@if(Model.Category != null)
{
    <span style="margin-left: 10px; margin-top: 5px;" class="glyphicon glyphicon-chevron-right"></span> @Html.ActionLink(Model.Category, "ShowProducts","Products", new { category = Model.Category }, null)
